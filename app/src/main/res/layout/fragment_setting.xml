<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SettingFragment">

    <!-- TODO: Update blank fragment layout -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingLeft="20dp"
        android:paddingRight="20dp">
        <TextView
            android:layout_marginBottom="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Cài đặt"
            android:textSize="30sp"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/tvLogin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/baseline_account_circle_24"
            android:drawablePadding="10dp"
            android:text="Đăng nhập"
            android:textSize="25sp" />

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/imvAvatar"
                android:layout_marginRight="10dp"
                android:layout_width="70dp"
                android:layout_height="70dp"/>

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/tvDisplayName"
                    android:textSize="25sp"
                    android:text="Username"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:id="@+id/tvEmail"
                    android:layout_marginTop="10dp"
                    android:textSize="20sp"
                    android:textColor="#ccc"
                    android:text="Email"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
            </LinearLayout>

        </LinearLayout>
        <TextView
            android:id="@+id/tvBookmark"
            android:layout_marginTop="10dp"
            android:drawableLeft="@drawable/bookmark"
            android:drawablePadding="10dp"
            android:textSize="25sp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Tin đã lưu"/>
        <TextView
            android:id="@+id/tvHistory"
            android:layout_marginTop="10dp"
            android:drawableLeft="@drawable/baseline_history_24"
            android:drawablePadding="10dp"
            android:textSize="25sp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Lịch sử đọc"/>
        <TextView
            android:id="@+id/tvLogout"
            android:layout_marginTop="10dp"
            android:drawableLeft="@drawable/baseline_logout_24"
            android:drawablePadding="10dp"
            android:textSize="25sp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Đăng xuất"/>

        <TextView
            android:id="@+id/tvAdmin"
            android:layout_marginTop="10dp"
            android:drawableLeft="@drawable/baseline_developer_mode_24"
            android:drawablePadding="10dp"
            android:textSize="25sp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Nhà phát triển"/>
    </LinearLayout>

</FrameLayout>